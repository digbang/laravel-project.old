{
	"name": "digbang/laravel-project",
	"description": "Digbang's Skeleton of a new Laravel project.",
	"keywords": ["digbang", "laravel", "skeleton", "project"],
	"license": "Proprietary",
	"require": {
		"laravel/framework":          "~4.2.0",
		"doctrine/dbal":              "~2.4",
		"barryvdh/laravel-debugbar":  "~1.6",
		"jenssegers/agent":           "~2.1",
		"fedeisas/laravel-js-routes": "~1.4",
		"intervention/image":         "~2.0",
		"cviebrock/image-validator":  "~1.0"
	},
	"require-dev": {
		"phpspec/phpspec":             "~2.0",
		"codeception/codeception":     "~2.0",
		"raveren/kint":                "~0.9",
		"fzaninotto/faker" :           "~1.3"
	},
	"autoload": {
		"classmap": [
			"app/database/migrations",
			"app/database/seeds"
		],
		"psr-0": {
			"ProjectName\\": "app/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
