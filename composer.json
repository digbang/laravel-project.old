{
    "name": "client-name/project-name",
    "description": "Project Description",
    "keywords": [
        "digbang",
        "project"
    ],
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": ">=5.6",
        "laravel/framework": "5.1.*",
        "digbang/events": "^1.0",
        "digbang/doctrine": "^3.0",
        "digbang/security": "^3.0",
        "digbang/backoffice": "^3.0",
        "LaravelBA/route-binder": "^4.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "barryvdh/laravel-debugbar": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "^4.0",
        "filp/whoops": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "ProjectName\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "build": [
            "npm install",
            "gulp --production",
            "php artisan clear-compiled",
            "php artisan vendor:publish --tag=\"assets\"",
            "php artisan doctrine:clear-cache:metadata",
            "php artisan doctrine:generate:proxies",
            "php artisan doctrine:schema:update --force",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories" : [
        { "url": "git@github.com:digbang/backoffice.git", "type": "vcs" },
        { "url": "git@github.com:digbang/security.git",   "type": "vcs" },
        { "url": "git@github.com:digbang/doctrine.git",   "type": "vcs" },
        { "url": "git@github.com:digbang/events.git",     "type": "vcs" },
        { "url": "git@github.com:digbang/assets.git",     "type": "vcs" }
    ],
    "suggest": {
        "intervention/image":          "PHP image handling and manipulation library.",
        "cviebrock/image-validator":   "Extra Laravel validation rules for dealing with images.",
        "fedeisas/laravel-js-routes":  "Laravel Javascript Routes.",
        "barryvdh/laravel-ide-helper": "Laravel IDE suggestions on Facades.",
        "raveren/kint":                "Debugging helper for PHP."
    }
}
