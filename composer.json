{
    "name":        "digbang/laravel-project",
    "description": "Digbang's Skeleton of a new Laravel project.",
    "type":        "project",
    "license":     "proprietary",
    "require": {
        "laravel/framework":      "~4.2",
        "digbang/doctrine":       "~1.2",
        "digbang/events":         "~0.1",
        "digbang/l4-backoffice":  "~2.0",
        "digbang/font-awesome":   "~1.0",
        "laravelba/route-binder": "~1.0",
        "jenssegers/agent":       "~2.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "~1.6",
        "phpunit/phpunit":           "~4.0",
        "mockery/mockery":           "~0.9",
        "fzaninotto/faker":          "~1.3",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": { "App\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "authors": [
        {
            "name":  "Guido Contreras Woda",
            "email": "gcontreras@digbang.com",
            "role":  "Architect"
        }
    ],
    "suggest": {
        "intervention/image":          "PHP image handling and manipulation library.",
        "cviebrock/image-validator":   "Extra Laravel validation rules for dealing with images.",
        "fedeisas/laravel-js-routes":  "Laravel Javascript Routes.",
        "barryvdh/laravel-ide-helper": "Laravel IDE suggestions on Facades and models.",
        "raveren/kint":                "Debugging helper for PHP developers."
    },
    "repositories" : [
        { "url": "git@github.com:digbang/backoffice.git",   "type": "vcs" },
        { "url": "git@github.com:digbang/security.git",     "type": "vcs" },
        { "url": "git@github.com:digbang/font-awesome.git", "type": "vcs" },
        { "url": "git@github.com:digbang/doctrine.git",     "type": "vcs" },
		{ "url": "git@github.com:digbang/events.git",       "type": "vcs" }
    ],
    "scripts": { },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
