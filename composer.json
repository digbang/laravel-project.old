{
    "name": "digbang/laravel-project",
    "description": "Digbang's Skeleton of a new Laravel project.",
    "keywords": [
        "digbang",
        "laravel",
        "skeleton",
        "project"
    ],
    "license": "Proprietary",
    "require": {
        "laravel/framework":          "~4.2",
        "digbang/doctrine":           "~0.1",
        "digbang/l4-backoffice":      "~1.3",
        "digbang/font-awesome":       "~1.0",
        "jenssegers/agent":           "~2.1",
        "intervention/image":         "~2.0",
        "cviebrock/image-validator":  "~1.0",
        "fedeisas/laravel-js-routes": "~1.4",
        "guiwoda/route-binder":       "~1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar":   "~1.6",
        "raveren/kint":                "~0.9",
        "phpunit/phpunit":             "~4.0",
        "fzaninotto/faker":            "~1.3",
        "mockery/mockery":             "~0.9",
        "barryvdh/laravel-ide-helper": "~1.11",
        "roave/security-advisories":   "dev-master"
    },
    "autoload": {
        "classmap": [
            "app/database/migrations"
        ],
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "repositories" : [
        {
            "type": "vcs",
            "url": "git@git.digbang.com:digbang/l4-backoffice.git"
        },
        {
            "type": "vcs",
            "url": "git@git.digbang.com:digbang/security.git"
        },
        {
            "type": "vcs",
            "url": "git@git.digbang.com:digbang/font-awesome.git"
        },
        {
            "type": "vcs",
            "url": "git@git.digbang.com:digbang/doctrine.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:guiwoda/doctrine2.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
